<%= form_for(@period) do |f| %>
  <% if @period.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@period.errors.count, "error") %> prohibited this period from being saved:</h2>

      <ul>
      <% @period.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :state_id %><br>
    <%= f.collection_select :state_id, State.all.order("name asc"), :id, :name, :prompt => "Select a state" %>
  </div>
  <div class="field">
    <%= f.label :period_start %><br>
    <%= f.datetime_select :period_start %>
  </div>
  <div class="field">
    <%= f.label :period_end %><br>
    <%= f.datetime_select :period_end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
