<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "First Name" %><br>
    <%= f.text_field :f_name %>
  </div>
  <div class="field">
    <%= f.label "Last Name" %><br>
    <%= f.text_field :l_name %>
  </div>
  <div class="field">
    <%= f.label "Email" %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label "State of License" %><br>
    <%= f.collection_select :state_id, State.all.order("name asc"), :id, :name, :prompt => "Select a state" %>
  </div>
  <div class="field">
    <%= f.label "License Number" %><br>
    <%= f.text_field :lic_number %>
  </div>
  <!-- <div class="field"> -->
    <!-- <%#= f.label :password %><br> -->
    <%#= f.password_field :password %>
  <!-- </div> -->
  <!-- <div class="field"> -->
    <!-- <%#= f.label :password_confirmation %><br> -->
    <%#= f.password_field :password_confirmation %>
  <!-- </div> -->
  <div class="field">
    <%= f.label "License Issue Date" %><br>
    <%= f.datetime_select :lic_initial_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
